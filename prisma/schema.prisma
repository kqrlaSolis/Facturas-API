generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Client {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  invoices Invoice[]
}

model Invoice {
  id        Int    @id @default(autoincrement())
  amount    Float
  date      DateTime @default(now())
  clientId  Int
  client    Client @relation(fields: [clientId], references: [id])
}
